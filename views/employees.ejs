<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список сотрудников</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .delete-button {
            background-color: #ff4d4d;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
        }
        .delete-button:hover {
            background-color: #cc0000;
        }
        .filters {
            margin-bottom: 20px;
        }
        .filters button {
            padding: 10px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
        }
        .filter-menu {
            display: none;
            background-color: #f4f4f4;
            padding: 15px;
            border: 1px solid #ddd;
            margin-top: 10px;
            border-radius: 5px;
        }
        .filter-menu select {
            padding: 5px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>Список сотрудников</h1>
    
    <div class="filters">
        <button id="filterButton">Фильтрация</button>
        <div id="filterMenu" class="filter-menu">
            <select id="departmentFilter">
                <option value="">Выберите отдел</option>
                <% let departments = [...new Set(employees.map(emp => emp.department))]; %>
                <% departments.forEach(department => { %>
                    <option value="<%= department %>"><%= department %></option>
                <% }); %>
            </select>
            <select id="positionFilter">
                <option value="">Выберите должность</option>
                <% let positions = [...new Set(employees.map(emp => emp.position))]; %>
                <% positions.forEach(position => { %>
                    <option value="<%= position %>"><%= position %></option>
                <% }); %>
            </select>
        </div>
    </div>

    <input type="text" id="searchInput" placeholder="Поиск по ФИО...">

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>ФИО</th>
                <th>Отдел</th>
                <th>Должность</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody id="employeeTable">
            <% employees.forEach((employee, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td class="employeeFIO"><%= employee.fio %></td>
                    <td class="employeeDepartment"><%= employee.department %></td>
                    <td class="employeePosition"><%= employee.position %></td>
                    <td>
                        <form action="/delete/<%= employee.id %>" method="POST">
                            <button type="submit" class="delete-button">Удалить</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <script>
        document.getElementById("filterButton").addEventListener("click", toggleFilterMenu);
        document.getElementById("searchInput").addEventListener("input", filterTable);
        document.getElementById("departmentFilter").addEventListener("change", filterTable);
        document.getElementById("positionFilter").addEventListener("change", filterTable);

        function toggleFilterMenu() {
            let filterMenu = document.getElementById("filterMenu");
            filterMenu.style.display = (filterMenu.style.display === "none" || filterMenu.style.display === "") ? "block" : "none";
        }

        function filterTable() {
            let searchInput = document.getElementById("searchInput").value.toLowerCase();
            let departmentFilter = document.getElementById("departmentFilter").value.toLowerCase();
            let positionFilter = document.getElementById("positionFilter").value.toLowerCase();
            
            let rows = document.querySelectorAll("#employeeTable tr");

            rows.forEach(row => {
                let name = row.querySelector(".employeeFIO").textContent.toLowerCase();
                let department = row.querySelector(".employeeDepartment").textContent.toLowerCase();
                let position = row.querySelector(".employeePosition").textContent.toLowerCase();

                if (
                    (name.includes(searchInput)) &&
                    (department.includes(departmentFilter) || departmentFilter === "") &&
                    (position.includes(positionFilter) || positionFilter === "")
                ) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
</body>
</html>
